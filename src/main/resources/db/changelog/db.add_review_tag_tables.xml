<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="1" author="volodymyr.slipchyk">
        <createTable tableName="review">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="user_id" type="BIGINT">
                <constraints nullable="false" unique="false"/>
            </column>

            <column name="rest_id" type="BIGINT">
                <constraints nullable="false" unique="false"/>
            </column>

            <column name="text" type="BIGINT">
                <constraints nullable="true" unique="false"/>
            </column>
            <column name="likes_count" type="BIGINT">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="rating" type="NUMERIC(1,1)">
                <constraints nullable="false" unique="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2" author="volodymyr.slipchyk">
        <createTable tableName="tag">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="text" type="VARCHAR(10)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>

        <createTable tableName="rest_tags">
            <column name="rest_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="tag_id" type="BIGINT">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>
    </changeSet>


    <changeSet id="3" author="volodymyr.slipchyk">
        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="review"
                                 constraintName="fk_review_user"
                                 onDelete="CASCADE"
                                 referencedColumnNames="id"
                                 referencedTableName="users"/>

        <addForeignKeyConstraint baseColumnNames="rest_id"
                                 baseTableName="review"
                                 constraintName="fk_review_rest"
                                 onDelete="CASCADE"
                                 referencedColumnNames="id"
                                 referencedTableName="restaurant"/>

        <addForeignKeyConstraint baseColumnNames="rest_id"
                                 baseTableName="rest_tags"
                                 constraintName="fk_rest_tag_rest"
                                 onDelete="CASCADE"
                                 referencedColumnNames="id"
                                 referencedTableName="restaurant"/>

        <addForeignKeyConstraint baseColumnNames="tag_id"
                                 baseTableName="rest_tags"
                                 constraintName="fk_rest_tag_tag"
                                 onDelete="CASCADE"
                                 referencedColumnNames="id"
                                 referencedTableName="tag"/>
    </changeSet>

</databaseChangeLog>